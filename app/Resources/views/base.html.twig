    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="text/css" rel="stylesheet" href="templates/main/css/main.css">
    <link type="text/css" rel="stylesheet" href="pygments/manni/highlight.css">
